        <!-- Battery ignore-->
        <Button
            android:id="@+id/setting_battery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Allow Run 24/7"
            android:backgroundTint="#1A1F3C"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="12dp"
            android:textAllCaps="false"
            android:elevation="3dp" />
        <!-- Feedback -->
        <Button
            android:id="@+id/setting_feedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send Feedback"
            android:backgroundTint="#1A1F3C"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="12dp"
            android:textAllCaps="false"
            android:elevation="3dp" />

        <!-- Bug Report -->
        <Button
            android:id="@+id/setting_bug"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Report Bug"
            android:backgroundTint="#1A1F3C"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="12dp"
            android:textAllCaps="false"
            android:elevation="3dp" />

        <!-- Clear Logs -->
        <Button
            android:id="@+id/setting_clear_logs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Clear Logs"
            android:backgroundTint="#1A1F3C"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="12dp"
            android:textAllCaps="false"
            android:elevation="3dp" />

        <!-- Clear Snipe Database -->
        <Button
            android:id="@+id/setting_clear_snipe_db"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Clear Snipe Database"
            android:backgroundTint="#1A1F3C"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="12dp"
            android:textAllCaps="false"
            android:elevation="3dp" />

        <!-- Clear Birthday Database -->
        <Button
            android:id="@+id/setting_clear_birthday_db"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Clear Birthday Database"
            android:backgroundTint="#1A1F3C"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="12dp"
            android:textAllCaps="false"
            android:elevation="3dp" />
            
        <!-- Clear Ratings Database -->
        <Button
            android:id="@+id/setting_clear_ratings_db"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Clear Rating Database"
            android:backgroundTint="#1A1F3C"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="12dp"
            android:textAllCaps="false"
            android:elevation="3dp" />

        <!-- Check Update -->
        <Button
            android:id="@+id/setting_check_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Check for Update"
            android:backgroundTint="#1A1F3C"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="20dp"
            android:textAllCaps="false"
            android:elevation="3dp" />
            
        <!-- Privacy Policy-->
        <Button
            android:id="@+id/setting_privacy_policy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Privacy and Policy"
            android:backgroundTint="#1A1F3C"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="20dp"
            android:textAllCaps="false"
            android:elevation="3dp" />

        <!-- Footer -->
        <TextView
            android:id="@+id/settings_version_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Version: "
            android:textColor="#7777AA"
            android:textSize="12sp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal" />
        <TextView
            android:id="@+id/setting_footer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Made by Ron ðŸ‘‘"
            android:textColor="#8888AA"
            android:textSize="12sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp" />
    </LinearLayout>
</ScrollView>