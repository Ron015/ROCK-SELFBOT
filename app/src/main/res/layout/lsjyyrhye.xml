<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:background="#0A0E17">

    <!-- Title with better typography -->
    <TextView
        android:id="@+id/licenseTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="License Verification"
        android:textColor="#D1C4E9"
        android:textSize="28sp"
        android:textStyle="bold"
        android:letterSpacing="0.03"
        android:layout_marginBottom="32dp"
        android:shadowColor="#80000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="4" />

    <!-- Input container with better visibility -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:background="@drawable/input_field_bg"
        android:elevation="8dp">

        <EditText
            android:id="@+id/licenseKeyInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your license key"
            android:textColor="#FFFFFF"
            android:textColorHint="#B39DDB"
            android:inputType="textPassword"
            android:padding="18dp"
            android:background="@android:color/transparent"
            android:textSize="16sp"
            android:letterSpacing="0.05"/>
    </FrameLayout>

    <!-- Verify Button with better styling -->
    <Button
        android:id="@+id/verifyBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="VALIDATE LICENSE"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/gradient_button"
        android:textStyle="bold"
        android:letterSpacing="0.05"
        android:elevation="8dp"/>
    
    <!-- Optional decorative elements -->
    <ImageView
        android:layout_width="120dp"
        android:layout_height="1dp"
        android:layout_marginTop="24dp"
        android:background="#B39DDB"
        android:alpha="0.5"/>
    
</LinearLayout>