<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    
    <!-- Gradient background -->
    <gradient
        android:startColor="#12182B"
        android:endColor="#0A0E17"
        android:angle="90"/>
    
    <!-- More pronounced rounded corners -->
    <corners android:radius="20dp" />
    
    <!-- Gradient border -->
    <stroke
        android:width="1.5dp"
        android:color="#00AAFF"
        android:dashWidth="0dp"
        android:dashGap="0dp" />
    
    <!-- Padding -->
    <padding
        android:left="8dp"
        android:top="4dp"
        android:right="8dp"
        android:bottom="4dp" />
</shape>